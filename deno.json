{
  "workspace": [
    "./api",
    "./auth", 
    "./event-store",
    "./inverse",
    "./json-rpc",
    "./toolkit"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/testing": "jsr:@std/testing@0.225.3",
    "drizzle-kit": "npm:drizzle-kit@0.23.0",
    "drizzle-orm": "npm:drizzle-orm@0.32.1"
  },
  "exclude": [
    ".vscode"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "ban-types",
        "no-explicit-any",
        "require-await"
      ]
    }
  },
  "fmt": {
    "lineWidth": 165
  },
  "publish": {
    "exclude": [
      ".eslint",
      ".github",
      ".vscode",
      ".gitignore",
      "tests"
    ]
  },
  "tasks": {
    "lint": "npx eslint -c .eslint/eslint.config.mjs .",
    "test": "deno test -A --unstable-ffi",
    "test:publish": "deno publish --dry-run",
    "generate": "deno run -A .tasks/generate.ts"
  }
}