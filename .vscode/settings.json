{
  "deno.enable": true,
  "deno.lint": false,
  "eslint.nodePath": "./.eslint/node_modules",
  "eslint.options": {
    "overrideConfigFile": "./.eslint/eslint.config.mjs"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  }
}
